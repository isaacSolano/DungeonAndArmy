<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<GridPane fx:controller="DungeonAndArmy.Board.Board"
          xmlns:fx="http://javafx.com/fxml"
          stylesheets="/DungeonAndArmy/Styles/Styles.css"
          fx:id="MainPane"
          alignment="center" hgap="10" vgap="10">

    <GridPane alignment="center" GridPane.columnIndex="1" GridPane.rowIndex="1"  GridPane.columnSpan="2">
        <Label fx:id="txtTimer" alignment="center" GridPane.columnIndex="1" GridPane.rowIndex="1"></Label>
    </GridPane>

    <GridPane fx:id="Board" alignment="center" GridPane.columnIndex="1" GridPane.rowIndex="2">

    </GridPane>

    <GridPane fx:id="Dashboard" alignment="center" GridPane.columnIndex="2" GridPane.rowIndex="1">
        <Button text="Invoke dice" onAction="#invokeDice" fx:id="dados"/>
        <Label fx:id="summonCount" GridPane.rowIndex="3">Summoning Dice</Label>
    </GridPane>

    <GridPane fx:id="PathBox" alignment="center" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="d-none">
        <Button onAction="#invokePath" fx:id="L" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="btnCamino" />
        <Button onAction="#invokePath" fx:id="Cruz" GridPane.columnIndex="2" GridPane.rowIndex="1" styleClass="btnCamino" />
        <Button onAction="#invokePath" fx:id="Z" GridPane.columnIndex="3" GridPane.rowIndex="1" styleClass="btnCamino" />
        <Button onAction="#invokePath" fx:id="P" GridPane.columnIndex="4" GridPane.rowIndex="1" styleClass="btnCamino" />
        <Button onAction="#invokePath" fx:id="U" GridPane.columnIndex="5" GridPane.rowIndex="1" styleClass="btnCamino" />
        <Button onAction="#invokePath" fx:id="T" GridPane.columnIndex="6" GridPane.rowIndex="1" styleClass="btnCamino" />

        <Button onAction="#flipPath" text="Flip" GridPane.columnIndex="7" GridPane.rowIndex="1" styleClass="btnCamino" />
    </GridPane>

</GridPane>